#include <stdio.h>
#include <getopt.h>
#include <unistd.h>


int main(int argc, char *argv[]) {
    
    int options = 0;
    char *nthreads = "1";
    char *consvoy = "v";
    char *fichierout = NULL;
    char fichiers[taille]; */ajouter une taille assez importante pour inclure tt les fichiers*/
    
    
    
    
    while((options=getopt (argc, argv, "t:co:f"))!=-1){
        switch (options) {
            case 't' :
                nthreads=optarg;
                break;
                
            case 'c':
                consvoy = "c";
                break;
                
            case 'o' :
                fichierout = optarg;
                break;
                
            case 'f' :
                fichier1 = 'f';
                printf(fichier1);
                break;
                
            case '?':
                strcat(fichiers, '?');
                break;
            default :
                return 1;
                
                
            }
                            
                            
    }
}
